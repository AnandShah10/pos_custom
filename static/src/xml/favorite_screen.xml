<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="FavoriteProductScreen">
        <div class="favorite-product-screen screen">
            <div class="screen-header">
                <div>
                    <h1 style="color:white !important;font-weight:bold;">Favorite Product Screen</h1>
                    <p>Date:<span t-esc="new Date().toLocaleDateString()"/></p>
                    <p>Popup Message:
                        <span t-if="pos.popupMessage" t-esc="pos.popupMessage"/>
                    </p>
                </div>
                <div class="large-buttons">
                    <button t-on-click="()=>pos.showScreen('ProductScreen')">GO back</button>
                    <button class="red">Mark as<br/>Favorite
                    </button>
                    <button class="orange">Mark as<br/>Not Favorite
                    </button>
                    <button class="blue" t-on-click="getProducts">Toggle Favorites</button>

                </div>
            </div>
            <div class="favorite-content">
                <div class="left-pane">
                    <table class="favorite-list">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="state.products" t-foreach="state.products" t-as="product" t-key="product.id">
                                <tr t-on-click="()=>this.setActiveProduct(product)">
                                    <td>
                                        <t t-if="product.default_code">
                                            [<span t-esc="product.default_code"/>]
                                        </t>
                                        <span t-esc="product.display_name"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div class="right-pane">
                    <div class="selected-product">
                        <h1 style="color:white !important;font-weight:bold;">Product Details</h1>
                        <p>
                            Name: <span t-esc="state.activeProduct.display_name"/>
                            <br/>
                            Code: <span t-if="state.activeProduct.default_code"
                                        t-esc="state.activeProduct.default_code"/>
                            <br/>
                            Price: <span t-esc="state.activeProduct.lst_price"/>
                            <br/>
                        </p>
                    </div>
                    <div class="pads">
                        <div class="control-buttons">
                            <MessagePopupButton/>
                        </div>
                        <div class="subpads">
                            <t t-set="_actionName">Custom Action</t>
                            <ActionpadWidget actionName="_actionName"/>
                            <Numpad buttons="getNumpadButtons()"/>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </t>
</templates>